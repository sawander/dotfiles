#!/bin/sh

export REPO=/home/wandsas/repos/void/void-packages
export XBPS_PASSPHRASE=foobar

# Initialize repository metadata
#xbps-rindex --sign --signedby "wandsas" --privkey ~/.ssh/privkey.pem ${REPO}/hostdir/binpkgs

# Make a signature per package
xbps-rindex --sign-pkg --privkey ~/.ssh/privkey.pem ${REPO}/hostdir/binpkgs/*.xbps

xbps-query --repository=${REPO}/hostdir/binpkgs -vL
